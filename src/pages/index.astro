					closestItem = item;
				}
			});

			// Only highlight the closest item
			serviceItems.forEach((item) => {
				if (item === closestItem) {
					item.classList.add("in-focus");
				} else {
					item.classList.remove("in-focus");
				}
			});

			ticking = false;
		};

		window.addEventListener(
			"scroll",
			() => {
				if (!ticking) {
					requestAnimationFrame(updateHighlight);
					ticking = true;
				}
			},
			{ passive: true },
		);

		// Initial call
		updateHighlight();
	}
</script>
