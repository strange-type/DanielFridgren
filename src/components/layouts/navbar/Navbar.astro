---
import Logo from "../../Logo.astro";
import MainNavLinks from "./MainNavLinks.astro";
import MobileMenu from "./MobileMenu.astro";
import { Icon } from "astro-icon/components";
---

<nav class="navbar" transition:persist>
  <div class="nav-left">
    <a href="/" aria-label="home" class="logo-link">
      <span class="sr-only">Home</span>
      <Logo />
    </a>
    <!--
    <div class="brand-text">
      <a href="/" aria-label="home">Daniel Fridgren</a>
    </div> -->
  </div>

  <div class="nav-right">
    <MainNavLinks />
    <button
      id="menu-toggle"
      class="menu-toggle"
      aria-label="Toggle mobile menu"
    >
      <Icon name="mdi:menu" class="menu-icon" width="32" height="32" />
      <Icon name="mdi:close" class="close-icon" width="32" height="32" />
    </button>
  </div>
</nav>

<MobileMenu />

<script>
  import { initNavbar } from "../../../scripts/navbar";

  // Run on initial load
  initNavbar();

  // Run on every page navigation
  document.addEventListener("astro:page-load", () => {
    initNavbar();
  });
</script>

<style>
  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    max-width: 100%;
    margin: 0 auto;
    padding: var(--space-2xs) var(--space-l) var(--space-m) var(--space-m);
    animation: fadeIn 0.5s 0.2s forwards;
    opacity: 0;
    z-index: 1001;
    mix-blend-mode: difference;
    transition: transform 0.3s ease-in-out;
    transform: translateY(0);
  }

  .navbar.navbar-hidden {
    transform: translateY(-100%);
  }

  .navbar::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    z-index: -1;
  }

  .nav-left {
    display: flex;
    align-items: center;
    gap: var(--space-s);
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: var(--space-m);
  }

  .logo-link {
    display: block;
    transform: scale(0.65);
    transform-origin: center;
  }

  .brand-text {
    font-size: var(--fs-xs);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .brand-text a {
    text-decoration: none;
    color: inherit;
  }

  .navbar,
  .navbar * {
    color: white;
  }

  .menu-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--space-xs);
    color: var(--color-text);
    font-size: var(--fs-l);
    position: relative;
    -webkit-tap-highlight-color: transparent;
    tap-highlight-color: transparent;
  }

  .menu-toggle .close-icon {
    display: none;
  }

  .menu-toggle.open .menu-icon {
    display: none;
  }

  .menu-toggle.open .close-icon {
    display: block;
  }

  @media (max-width: 768px) {
    .navbar {
      padding: var(--space-xs) var(--space-s) var(--space-s) var(--space-s);
    }
  }

  @media screen and (max-width: 576px) {
    .navbar {
      padding: var(--space-xs) calc(var(--space-2xs) * 0.1) 0 var(--space-s);
    }

    .brand-text {
      display: none;
    }

    .logo-link {
      transform: scale(1);
    }

    .nav-right > :not(.menu-toggle) {
      display: none !important;
    }

    .menu-toggle {
      display: block;
    }
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }
</style>
