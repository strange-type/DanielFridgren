---
import Logo from "../../Logo.astro";
import MainNavLinks from "./MainNavLinks.astro";
import MobileMenu from "./MobileMenu.astro";
import { Icon } from "astro-icon/components";
---

<nav class="navbar" transition:persist>
  <div class="brand">
    <a href="/" aria-label="home">
      <span class="visually-hidden">Home</span>
      <Logo />
    </a>
    <div class="brand-text docked">
      <a href="/" aria-label="home">Daniel Fridgren</a>
    </div>
  </div>
  <div class="right-hand-side">
    <MainNavLinks />
    <button
      id="menu-toggle"
      class="menu-toggle"
      aria-label="Toggle mobile menu"
    >
      <Icon name="mdi:menu" class="menu-icon" width="32" height="32" />
      <Icon name="mdi:close" class="close-icon" width="32" height="32" />
    </button>
  </div>
</nav>

<MobileMenu />

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const menuToggle = document.getElementById("menu-toggle");
    const mobileMenu = document.getElementById("mobile-menu");

    menuToggle?.addEventListener("click", () => {
      mobileMenu?.classList.toggle("open");
      menuToggle?.classList.toggle("open");
      const isOpen = mobileMenu?.classList.contains("open");
      document.body.style.overflow = isOpen ? "hidden" : "auto";
    });
  });
</script>

<style>
  .navbar {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-end;
    margin: var(--space-l) auto var(--space-l);
    padding: 0 var(--space-l);
    padding-right: calc(var(--space-l) * 1.4);
    animation: fadeIn 0.5s 0.2s forwards;
    opacity: 0;
    background: transparent;
    position: relative;
    z-index: 1001;
  }

  .brand {
    display: flex;
    align-items: end;
    flex-direction: row;
    gap: var(--space-s);
  }

  .brand-text {
    display: flex;
    align-items: baseline;
    gap: var(--space-s);
  }

  .docked {
    font-size: var(--fs-xs);
    font-weight: 600;
    text-transform: uppercase;
  }

  .subtle {
    font-size: var(--fs-xs);
    font-weight: 600;
    color: var(--color-subtle);
    text-transform: uppercase;
  }

  .right-hand-side {
    display: flex;
    align-items: baseline;
  }

  .menu-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--space-xs);
    color: var(--color-text);
    font-size: var(--fs-l);
    position: relative;
  }

  .menu-toggle .close-icon {
    display: none;
  }

  .menu-toggle.open .menu-icon {
    display: none;
  }

  .menu-toggle.open .close-icon {
    display: block;
  }

  .subtle {
    color: var(--color-subtle);
  }
  @media screen and (max-width: 576px) {
    .navbar {
      padding: 0 var(--space-s);
      margin-top: var(--space-s);
      margin-bottom: var(--space-m);
      align-items: center;
    }

    .right-hand-side > :not(.menu-toggle) {
      display: none !important;
    }

    .menu-toggle {
      display: block;
    }

    .brand {
      align-items: center;
    }

    .brand-text {
      flex-direction: column;
      align-items: flex-start;
    }
    .docked {
      display: none;
    }

    .subtle {
      display: none;
    }
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }
</style>
