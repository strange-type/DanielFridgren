---
import Spacer from "../Spacer.astro";
import PageWrapper from "./PageWrapper.astro";
---

<PageWrapper>
  <footer class="footer" transition:persist>
    <div class="footer-grid">
      <div class="footer-left">
        <svg
          class="footer-logo"
          width="105"
          height="156"
          viewBox="0 0 105 156"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path d="M105 0V20H98.25H51V0H105Z" fill="var(--color-bg)"></path>
          <path d="M105 67V87H94.375H20V67H105Z" fill="var(--color-bg)"></path>
          <path
            d="M20 156L8.85556e-07 156L1.73793e-06 136.5L7.70453e-06 -8.74227e-07L20 0L20 156Z"
            fill="var(--color-bg)"></path>
        </svg>
        <p class="footer-copyright">
          © {new Date().getFullYear()} Daniel Fridgren<br />Malmö, Sweden
        </p>
      </div>

      <div class="footer-nav">
        <div class="footer-column">
          <h3 class="footer-heading">ABOUT</h3>
          <nav>
            <a href="/about" class="footer-link">About</a>
            <a href="/cases" class="footer-link">Work</a>
            <a href="/blog" class="footer-link">Blog</a>
            <a href="/colophon" class="footer-link">Colophon</a>
          </nav>
        </div>

        <div class="footer-column">
          <h3 class="footer-heading">CONTACT</h3>
          <nav>
            <a
              href="https://linkedin.com/in/fridgren"
              target="_blank"
              rel="noopener noreferrer"
              class="footer-link">LinkedIn</a
            >
            <a
              href="https://x.com/fridgren"
              target="_blank"
              rel="noopener noreferrer"
              class="footer-link">Twitter</a
            >
            <a href="mailto:daniel@fridgren.se" class="footer-link">Email</a>
            <a href="/newsletter" class="footer-link">Newsletter</a>
          </nav>
        </div>
      </div>
    </div>
  </footer>
</PageWrapper>

<style>
  .footer {
    background-color: var(--color-black);
    color: var(--color-white);
    padding: var(--space-2xl) 0;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: var(--space-2xl);
    align-items: start;
  }

  .footer-left {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .footer-logo {
    width: 52.5px;
    height: 78px;
  }

  .footer-copyright {
    font-size: var(--fs-sm);
    font-family: var(--font-sans);
    font-weight: 400;
    color: var(--color-gray-500);
    line-height: 1.5;
    margin: 0;
  }

  .footer-nav {
    display: grid;
    grid-template-columns: repeat(2, minmax(150px, 200px));
    gap: var(--space-2xl);
  }

  .footer-column {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .footer-column nav {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .footer-heading {
    font-size: var(--fs-xs);
    font-family: var(--font-sans);
    font-weight: 500;
    letter-spacing: 0.05em;
    color: var(--color-gray-500);
    margin: 0;
  }

  .footer-link {
    font-size: var(--fs-base);
    font-family: var(--font-sans);
    font-weight: 400;
    color: var(--color-white);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer-link:hover {
    color: var(--color-gray-300);
  }

  @media (max-width: 770px) {
    .footer {
      padding: var(--space-xl) 0;
    }

    .footer-grid {
      grid-template-columns: 1fr;
      gap: var(--space-xl);
    }

    .footer-left {
      order: 1;
    }

    .footer-nav {
      order: 2;
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-lg);
    }

    .footer-copyright {
      order: 3;
      margin-top: var(--space-lg);
    }
  }
</style>
