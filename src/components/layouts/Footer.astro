---
import Spacer from "../Spacer.astro";
---

<footer class="footer">
  <Spacer size="2xl" />
  <div class="footer-grid">
    <div class="footer-left">
      <svg
        width="136"
        height="139"
        viewBox="0 0 136 139"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        class="footer-logo"
      >
        <rect width="136" height="32" fill="currentColor"></rect>
        <path d="M104 51H136V83H107.556H104V51Z" fill="currentColor"></path>
        <path
          d="M104 83.0005C74.5418 83.0007 46.1273 104.809 35.948 138.6H2.97046C14.0856 88.3166 55.1016 51.0007 104 51.0005V83.0005Z"
          fill="currentColor"></path>
      </svg>

      <p class="footer-copyright footer-animate">
        © {new Date().getFullYear()} Daniel Fridgren<br />Malmö, Sweden
      </p>
    </div>

    <div class="footer-nav">
      <div class="footer-column">
        <h3 class="footer-heading footer-animate">ABOUT</h3>
        <nav>
          <a href="/about" class="footer-link footer-animate">About</a>
          <a href="/work" class="footer-link footer-animate">Work</a>
          <a href="/blog" class="footer-link footer-animate">Blog</a>
          <a href="/colophon" class="footer-link footer-animate">Colophon</a>
        </nav>
      </div>

      <div class="footer-column">
        <h3 class="footer-heading footer-animate">CONTACT</h3>
        <nav>
          <a
            href="https://linkedin.com/in/fridgren"
            target="_blank"
            rel="noopener noreferrer"
            class="footer-link footer-animate">LinkedIn</a
          >
          <a href="mailto:daniel@fridgren.se" class="footer-link footer-animate"
            >Email</a
          >
          <a href="/newsletter" class="footer-link footer-animate">Newsletter</a
          >
          <a
            href="https://github.com/strange-type/DanielFridgren"
            target="_blank"
            rel="noopener noreferrer"
            class="footer-link footer-animate">GitHub</a
          >
        </nav>
      </div>
    </div>
  </div>
  <Spacer size="large" />

  <style>
    .footer {
      background-color: var(--color-fg);
      color: var(--color-bg);
      width: 100vw;
      position: relative;
      left: 50%;
      right: 50%;
      margin-left: -50vw;
      margin-right: -50vw;
      margin-bottom: 0;
      will-change: auto;
    }

    .footer-container {
      max-width: 1440px;
      margin: 0 auto;
      padding: var(--space-128) var(--space-l);
    }

    .footer-grid {
      display: grid;
      grid-template-columns: 1fr auto;
      gap: var(--space-2xl);
      align-items: start;
      position: relative;
      z-index: 1;
    }

    .footer-left {
      display: flex;
      flex-direction: column;
      gap: var(--space-lg);
      margin-left: var(--space-xl);
      align-self: start;
    }

    .footer-logo {
      width: 136px;
      height: 139px;
      color: var(--color-bg);
    }

    /* Ensure logo is always white (matches footer text color) */
    @media (prefers-color-scheme: dark) {
      .footer-logo {
        color: var(--color-black);
      }
    }

    .footer-copyright {
      font-size: var(--fs-xs);
      font-family: var(--font-sans);
      font-weight: 400;
      color: var(--color-muted);
      line-height: var(--leading-loose);
      margin: 20px 0;
    }

    .footer-nav {
      display: grid;
      grid-template-columns: repeat(2, minmax(150px, 200px));
      gap: var(--space-2xl);
      align-self: start;
    }

    .footer-column {
      display: flex;
      flex-direction: column;
      gap: var(--space-md);
    }

    .footer-column nav {
      display: flex;
      flex-direction: column;
      gap: var(--space-md);
    }

    .footer-heading {
      font-size: var(--fs-xs);
      font-family: var(--font-sans);
      font-weight: 500;
      letter-spacing: 0.05em;
      color: var(--color-muted);
      margin: 0 0 0.35rem 0;
    }

    .footer-link {
      font-size: var(--fs-sm);
      font-family: var(--font-sans);
      font-weight: 400;
      line-height: var(--leading-base);
      color: var(--color-bg);
      text-decoration: none;
      transition: color 0.2s ease;
      margin-bottom: var(--space-2xs);
    }

    .footer-link:hover {
      color: var(--color-gray-300);
    }

    /* Animation class used by GSAP */
    .footer-animate {
      /* Animated by GSAP script */
    }

    @media (max-width: 768px) {
      .footer-container {
        padding: var(--space-2xl) var(--space-m);
      }

      .footer-grid {
        grid-template-columns: 1fr;
        gap: var(--space-xl);
      }
      .footer-column {
        margin-left: var(--space-xl);
      }

      .footer-link {
        line-height: var(--leading-loose);
      }
    }

    @media (max-width: 576px) {
      .footer-container {
        padding: var(--space-xl) var(--space-s);
      }

      .footer-left {
        order: 1;
        margin-left: var(--space-m);
      }

      .footer-nav {
        order: 2;
        grid-template-columns: repeat(2, 1fr);
        gap: var(--space-lg);
      }

      .footer-column {
        margin-left: var(--space-m);
      }

      .footer-copyright {
        order: 3;
        margin-top: 20px;
      }
    }
  </style>
</footer>
