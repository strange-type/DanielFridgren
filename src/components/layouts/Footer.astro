---
import Spacer from "../Spacer.astro";
---

<footer class="footer" transition:persist>
  <Spacer size="2xl" />
  <div class="footer-grid">
    <div class="footer-left">
      <svg
        class="footer-logo"
        width="105"
        height="156"
        viewBox="0 0 105 156"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          id="footer-path-1"
          d="M105 0V20H98.25H51V0H105Z"
          fill="var(--color-bg)"></path>
        <path
          id="footer-path-2"
          d="M105 67V87H94.375H20V67H105Z"
          fill="var(--color-bg)"></path>
        <path
          id="footer-path-3"
          d="M20 156L8.85556e-07 156L1.73793e-06 136.5L7.70453e-06 -8.74227e-07L20 0L20 156Z"
          fill="var(--color-bg)"></path>
      </svg>
      <p class="footer-copyright footer-animate">
        © {new Date().getFullYear()} Daniel Fridgren<br />Malmö, Sweden
      </p>
    </div>

    <div class="footer-nav">
      <div class="footer-column">
        <h3 class="footer-heading footer-animate">ABOUT</h3>
        <nav>
          <a href="/about" class="footer-link footer-animate">About</a>
          <a href="/cases" class="footer-link footer-animate">Work</a>
          <a href="/blog" class="footer-link footer-animate">Blog</a>
          <a href="/colophon" class="footer-link footer-animate">Colophon</a>
        </nav>
      </div>

      <div class="footer-column">
        <h3 class="footer-heading footer-animate">CONTACT</h3>
        <nav>
          <a
            href="https://linkedin.com/in/fridgren"
            target="_blank"
            rel="noopener noreferrer"
            class="footer-link footer-animate">LinkedIn</a
          >
          <a
            href="https://x.com/fridgren"
            target="_blank"
            rel="noopener noreferrer"
            class="footer-link footer-animate">Twitter</a
          >
          <a href="mailto:daniel@fridgren.se" class="footer-link footer-animate"
            >Email</a
          >
          <a href="/newsletter" class="footer-link footer-animate">Newsletter</a
          >
        </nav>
      </div>
    </div>
  </div>
  <Spacer size="large" />
</footer>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  // Set initial state - paths hidden
  gsap.set(["#footer-path-3"], {
    scaleY: 0,
  });

  gsap.set(["#footer-path-1", "#footer-path-2"], {
    scaleX: 0,
  });

  // Set initial state for text elements
  gsap.set(".footer-animate", {
    opacity: 0,
    y: 20,
  });

  // Create staggered animation when footer scrolls into view
  ScrollTrigger.create({
    trigger: ".footer",
    start: "top bottom-=300",
    once: true,
    onEnter: () => {
      // Animate logo paths
      gsap.to(["#footer-path-3"], {
        opacity: 1,
        scaleY: 1,
        duration: 0.6,
        ease: "power2.out",
        stagger: 0.15,
      });

      gsap.to(["#footer-path-1", "#footer-path-2"], {
        opacity: 1,
        scaleX: 1,
        duration: 0.6,
        ease: "power2.out",
        stagger: 0.15,
      });

      // Animate text elements with stagger
      gsap.to(".footer-animate", {
        opacity: 1,
        y: 0,
        duration: 0.6,
        ease: "power2.out",
        stagger: 0.08,
        delay: 0.3,
      });
    },
  });
</script>

<style>
  .footer {
    background-color: var(--color-fg);
    color: var(--color-bg);
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    margin-bottom: 0;
    overflow: hidden;
  }

  .footer-container {
    max-width: 1440px;
    margin: 0 auto;
    padding: var(--space-128) var(--space-l);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: var(--space-2xl);
    align-items: start;
    position: relative;
    z-index: 1;
  }

  .footer-left {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
    margin-left: var(--space-xl);
    align-self: start;
  }

  .footer-logo {
    width: 52.5px;
    height: 78px;
  }

  .footer-copyright {
    font-size: var(--fs-xs);
    font-family: var(--font-sans);
    font-weight: 400;
    color: var(--color-muted);
    line-height: var(--leading-loose);
    margin: 20px 0;
  }

  .footer-nav {
    display: grid;
    grid-template-columns: repeat(2, minmax(150px, 200px));
    gap: var(--space-2xl);
    align-self: start;
  }

  .footer-column {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .footer-column nav {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .footer-heading {
    font-size: var(--fs-xs);
    font-family: var(--font-sans);
    font-weight: 500;
    letter-spacing: 0.05em;
    color: var(--color-gray-700);
    margin: 0 0 0.35rem 0;
  }

  .footer-link {
    font-size: var(--fs-sm);
    font-family: var(--font-sans);
    font-weight: 400;
    line-height: var(--leading-base);
    color: var(--color-white);
    text-decoration: none;
    transition: color 0.2s ease;
    margin-bottom: var(--space-2xs);
  }

  .footer-link:hover {
    color: var(--color-gray-300);
  }

  @media (max-width: 768px) {
    .footer-container {
      padding: var(--space-2xl) var(--space-m);
    }

    .footer-grid {
      grid-template-columns: 1fr;
      gap: var(--space-xl);
    }
    .footer-column {
      margin-left: var(--space-xl);
    }

    .footer-link {
      line-height: var(--leading-loose);
    }
  }

  @media (max-width: 576px) {
    .footer-container {
      padding: var(--space-xl) var(--space-s);
    }

    .footer-left {
      order: 1;
    }

    .footer-nav {
      order: 2;
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-lg);
    }

    .footer-copyright {
      order: 3;
      margin-top: 20px;
    }
  }
</style>
